# API URL - Points to your production backend on Render
REACT_APP_API_URL=https://api.insyte.io

# Base URL for the frontend application - Used for generating absolute URLs
REACT_APP_BASE_URL=https://insyte.io

# Node environment (set to production for optimized build)
NODE_ENV=production

# Public URL - The path at which your app is served (usually '/' for root domain)
PUBLIC_URL=/

# === OAUTH INTEGRATIONS ===

# YouTube API credentials
REACT_APP_YOUTUBE_CLIENT_ID=your_youtube_client_id
REACT_APP_YOUTUBE_API_KEY=your_youtube_api_key
REACT_APP_YOUTUBE_REDIRECT_URI=https://api.insyte.io/auth/youtube/callback

# Stripe integration
REACT_APP_STRIPE_PUBLIC_KEY=your_stripe_publishable_key
REACT_APP_STRIPE_CLIENT_ID=your_stripe_client_id
REACT_APP_STRIPE_REDIRECT_URI=https://api.insyte.io/auth/stripe/callback

# Calendly integration
REACT_APP_CALENDLY_CLIENT_ID=your_calendly_client_id
REACT_APP_CALENDLY_REDIRECT_URI=https://api.insyte.io/auth/calendly/callback

# Cal.com integration
REACT_APP_CALCOM_CLIENT_ID=your_calcom_client_id
REACT_APP_CALCOM_REDIRECT_URI=https://api.insyte.io/auth/calcom/callback

# Optional: Analytics and tracking IDs (if you're using them)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
# REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Optional: Feature flags for production
# REACT_APP_ENABLE_FEATURE_X=true
# REACT_APP_ENABLE_FEATURE_Y=false
